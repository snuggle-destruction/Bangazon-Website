@model Bangazon.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCompleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCompleted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentType.AccountNumber)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderProducts.First().Product.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderProducts.First().Product.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderProducts.First().Product.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderProducts.First().Product.ProductType.Label)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderProducts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductType.Label)
                </td>
            </tr>

        }
    </tbody>
</table>

@if (Model.DateCompleted == null)
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
}
else
{
    <div>
        <a asp-action="GetOrderHistory">Back to List</a>
    </div>
}
